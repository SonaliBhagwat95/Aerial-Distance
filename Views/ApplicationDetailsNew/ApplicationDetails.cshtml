@model AerialDistance.Model.ApplicationDetailsNewModel
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
<style>
    .smaller-font, .smaller-font input {
        font-size:medium;
    }

    .smaller-height {
        height: 30px;
    }

</style>

<div id="divApplicationDetailsNew">
    <form asp-action="ApplicationDetails" asp-controller="ApplicationDetailsNew" method="post">
        <h3 style="text-align:center">Applicant Details</h3>
        <hr/>
        <div class="col-md-12 col-lg-12 col-sm-12">
            <div class="row">
                <div class="col-md-3">
                    <lable class="smaller-font">Application No.</lable>
                    @Html.TextBoxFor(c=>c.ApplicationNo , new { @id = "txtApplicationNo", @class = "form-control smaller-font smaller-height", style = "width:200px;" })
                </div>
                <div class="col-md-3">
                    <lable >Name Of Applicant</lable>
                    @Html.TextBoxFor(c=>c.ApplicantName , new { @id = "txtApplicantName", @class = "form-control smaller-font smaller-height", style = "width:200px;" })
                </div>
                <div class="col-md-3">
                    <lable>Mobile No.1</lable>
                    @Html.TextBoxFor(c=>c.MobileNo , new { @id = "txtMobileNo1", @class = "form-control smaller-font smaller-height", style = "width:200px;" })
                </div>
                <div class="col-md-3">
                    <lable>Mobile No.2</lable>
                    @Html.TextBoxFor(c=>c.MobileNo2 , new { @id = "txtMobileNo2", @class = "form-control smaller-font smaller-height", style = "width:200px;" })
                </div>
            </div>
            <br/>
            <div class="row">
                <div class="col-md-6">
                    <lable class="smaller-font">Certificate to be issued(Company/Owner Name)</lable>
                    @Html.TextBoxFor(c=>c.Comapny_OwnerName , new { @id = "txtApplicationNo", @class = "form-control smaller-font smaller-height", style = "width:465px;" })
                </div>
                <div class="col-md-3">
                    <lable class="smaller-font">Application Date</lable>
                    @Html.TextBoxFor(c=>c.ApplicationDate ,"{0:yyyy-MM-dd}", new { @id = "txtApplicationDate",@type="date", @class = "form-control smaller-font smaller-height", style = "width:200px;" })
                </div> 
                <div class="col-md-3">
                    <lable class="smaller-font">Select Zone</lable>
                    @Html.DropDownListFor(c => c.Zone, new List<SelectListItem>
                    {
                    new SelectListItem { Text = "Red", Value = "1" },
                    new SelectListItem { Text = "Pink", Value ="2" },
                    new SelectListItem { Text = "Yellow", Value = "3" },
                    new SelectListItem { Text = "Green", Value ="4" },
                    new SelectListItem{Text="Sky Blue",Value="5"}
                    }, "--Select--", new { @id = "drpZone", @class = "form-control smaller-font smaller-height", style = "width: 200px;" })
                </div>
            </div>
            <br />
            <div class="row">               
                <div class="col-md-6">
                    <lable class="smaller-font">Address of Correspondence</lable>
                    @Html.TextBoxFor(c=>c.CorrespondenceAddress , new { @id = "txtApplicationNo", @class = "form-control smaller-font smaller-height", style = "width:465px;" })
                </div>
                <div class="col-md-6">
                    <lable class="smaller-font">Site Address(S.No./Gut No./City S.No./Village/Taluka/Dist.)</lable>
                    @Html.TextBoxFor(c=>c.SiteAddress , new { @id = "txtApplicationNo", @class = "form-control smaller-font smaller-height", style = "width:465px;" })
                </div>
            </div><br/>
            <div class="row">
                <div class="col-md-3">
                    <lable class="smaller-font">Advance Payment</lable>
                    @Html.DropDownListFor(c => c.AdvancePayment, new List<SelectListItem>
                    {
                    new SelectListItem { Text = "Yes", Value = "1" },
                    new SelectListItem { Text = "No", Value ="2" },
                   
                    }, "--Select--", new { @id = "drpAdvancePayment", @class = "form-control smaller-font smaller-height", style = "width: 200px;" })
                </div>
                <div class="col-md-3">
                    <lable class="smaller-font">Payment Type </lable>
                    @Html.DropDownListFor(c => c.PaymentType, new List<SelectListItem>
                    {
                    new SelectListItem { Text = "Cash", Value = "1" },
                    new SelectListItem { Text = "Cheques", Value ="2" },
                    new SelectListItem { Text = "Internet Banking", Value ="3" },
                    new SelectListItem { Text = "UPI", Value ="4" },

                    }, "--Select--", new { @id = "drpPaymentType", @class = "form-control smaller-font smaller-height", style = "width: 200px;" })
                </div>
                <div class="col-md-3">
                    <lable class="smaller-font">Amount</lable>
                    @Html.TextBoxFor(c=>c.Amount , new { @id = "txtApplicationNo", @class = "form-control smaller-font smaller-height", style = "width:200px;" })
                </div>
               @*  <div class="col-md-3">
                    <lable class="smaller-font">Upload Scan Copy</lable>
                    @Html.TextBoxFor(c=>c.Comapny_OwnerName , new { @id = "txtApplicationNo", @class = "form-control smaller-font smaller-height", style = "width:200px;" })
                </div> *@
            </div><br/>
            <div class="row">
            <div class="col-md-3">
                <button id="btnSave" class="btn btn-primary" style="width:140px;">Save</button>
            </div>
            </div>
        </div>

</form>
</div>
